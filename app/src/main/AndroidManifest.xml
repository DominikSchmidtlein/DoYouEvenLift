<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.domkick1.trace" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.domkick1.com.domkick1.trace.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.domkick1.com.domkick1.trace.InstructionsActivity"
            android:label="@string/title_activity_instructions"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.domkick1.com.domkick1.trace.MainActivity">
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.domkick1.com.domkick1.trace.MainActivity"/>
        </activity>
    </application>

</manifest>
